{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Incoming Webhook",
            "type": "shell",
            "command": "npm run dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^.*$",
                        "file": 0,
                        "location": 1,
                        "message": 2
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "[nodemon] starting",
                    "endsPattern": "restify listening to|[nodemon] app crashed"
                }
            },
            "options": {
                "cwd": "${workspaceFolder}/incoming-webhook"
            }
        }
    ]
}
